@using GoodeBooks.Services.ViewModels.SaleInfos;
@model SaleInfoCreateViewModel

<form asp-action="CreateNewSaleInfo" asp-controller="SaleInfo" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SaleAbility"></label>
        <input asp-for="SaleAbility" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IsEbook"></label>
        <div class="checkbox">
            <input asp-for="IsEbook" class="form-check-input" />
            <label class="form-check-label">Is Ebook</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
