@using GoodeBooks.Services.ViewModels.Volumes;

@model VolumeViewModel

<div class="form-container">
    <form asp-action="UpdateVolume" asp-controller="Volume" method="post">
        <input hidden asp-for="Id" />

        <div>
            <label asp-for="Kind">Kind:</label>
            <input asp-for="Kind" style="width: 300px;" readonly />
        </div>

        <div>
            <label asp-for="Etag">Etag:</label>
            <input asp-for="Etag" />
        </div>

        <div>
            <label asp-for="VolumeName">Title:</label>
            <input asp-for="VolumeName" class="title" style="width: 300px;" />
        </div>

        <div>
            <label asp-for="Country">Country:</label>
            <input asp-for="Country" />
        </div>

        <div>
            <label asp-for="TextSnippet">Text snippet:</label>
            <textarea asp-for="TextSnippet" class="form-control"></textarea>
        </div>

        <div>
            <img src="@Model.ImageUrl" alt="Image" class="form-image">
        </div>

        <button type="submit">Update</button>
    </form>
</div>

<style>
    .form-image {
        max-width: 50%;
        height: auto;
        display: block;
        margin-bottom: 2.5%;
        margin-top: -50%;
        float: right;
        margin-right: 10%;
    }

    .form-control {
        max-width: 100%;
        width: 300px;
        height:300px;
    }

    .form-container {
        overflow: hidden;
        max-width: 600px;
    }

    .title {
        width: 300px;
    }
</style>

