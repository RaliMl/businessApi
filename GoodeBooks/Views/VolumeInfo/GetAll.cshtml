@using GoodeBooks.Services.ViewModels.VolumeInfos;
@model PagedList.IPagedList<VolumeInfoViewModel>

<div class="container">
    <table>
        <tr>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Authors</th>
            <th>Date of publishing</th>
            <th>Description</th>
            <th>Pages</th>
            <th>Language</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var volumeInfo in Model)
        {
            <tr>
                <td hidden>@volumeInfo.Id</td>
                <td>@volumeInfo.Title</td>
                <td>@volumeInfo.Subtitle</td>
                <td>@volumeInfo.Authors</td>
                <td>@volumeInfo.PublishedDate</td>
                <td>@volumeInfo.Description</td>
                <td>@volumeInfo.PageCount</td>
                <td>@volumeInfo.Language</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="@Url.Action("Update", "VolumeInfo", new { id = volumeInfo.Id })">Update</a>
                    </div>
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="@Url.Action("Delete", "VolumeInfo", new { id = volumeInfo.Id })">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
    <!-- Previous page button -->
    <a href="@Url.Action("PreviousPage", new { currentPage = Model.PageNumber })">Previous</a>

    <!-- Next page button -->
    <a href="@Url.Action("NextPage", new { currentPage = Model.PageNumber })">Next</a>

</div>

<link rel="stylesheet" href="/css/table.css" />




